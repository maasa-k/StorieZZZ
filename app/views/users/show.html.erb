<% redirect_if_not_logged_in %>

<div class="welcome-text">
    Welcome <%= current_user.username %>!
</div>

<h3>My Dreams</h3>

<div class="columns is-mobile is-centered">
    <table class="table">
        <tr>
            <th>Category</th>
            <th>Dream Description</th>
            <th>Date</th>
        </tr>
        <% current_user.dreams.date_order.each do |dream| %>
        <tr>
            <td><%= dream.category.name %></td>
            <td><%= link_to dream.description, dream_path(dream) %></td>
            <td><%= format_date(dream.date) %></td>
        </tr>
        <% end %>
    </table>
</div>