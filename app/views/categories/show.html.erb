<% redirect_if_not_logged_in %>

<h2 class='is-size-3'><%= @category.name %> Dreams</h2>
<br>

<table class='table'>
    <tr>
        <th>Dream Description</th>
        <th>Date</th>
    </tr>
    <% @category.dreams.each do |dream| %>
    <tr>
        <td><%= link_to dream.description, dream_path(dream) %></td>
        <td><%= format_date(dream.date) %></td>
    </tr>
    <% end %>
</table>