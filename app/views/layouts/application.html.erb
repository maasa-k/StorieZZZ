<!DOCTYPE html>
<html>
  <head>
    <title>StorieZZZ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar">
      <% if logged_in? %>
        <%= link_to "My Dreams", root_path %> / 
        <%= link_to "New Dream", new_dream_path %> / 
        <%= link_to "See Everyone's Dreams", dreams_path %> / 
        <%= link_to "Log Out", logout_path %>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
