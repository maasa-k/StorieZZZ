<% redirect_if_not_logged_in %>

<h4>Date: <%= @dream.date.strftime("%m/%d/%Y") %></h4>
<h4>Category: <%= @dream.category.name %></h4>
<h4>Description: <%= @dream.description %></h4>

<% if current_user.id == @dream.user_id %>
    <%= link_to "Edit", edit_dream_path %>
    <%= link_to "Delete", dream_path(@dream), method: :delete, data: {confirm: "Are you sure?"} %>
<% end %>
<br>
<br>
<%= link_to "Interpret this dream", new_dream_interpretation_path(@dream) %>
<br>
<%= link_to "See other interpretations", dream_interpretations_path(@dream) %>