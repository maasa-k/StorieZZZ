<% redirect_if_not_logged_in %>

<h2 class='is-size-3 has-text-centered'>Everyone's Dreams</h2>
<br/>

<h3><%= link_to "Dreams by Category", categories_path, class: "button is-medium is-primary is-rounded" %></h3>
<br/>

<table class="table">
    <tr>
        <th>Category</th>
        <th>Dream Description</th>
        <th>Date</th>
    </tr>
    <% @dreams.each do |dream| %>
    <tr>
        <td><%= dream.category.name %></td>
        <td><%= link_to dream.description, dream_path(dream) %></td>
        <td><%= format_date(dream.date) %></td>
    </tr>
    <% end %>
</table>