<% redirect_if_not_logged_in %>

<h3>Everyone's Dreams</h3>

<h3 class="has-text-right"><%= link_to "Dreams by Category", categories_path, class: "button is-primary is-rounded" %></h3>

<div class="columns is-mobile is-centered">
    <table class="table">
        <tr>
            <th>Category</th>
            <th>Dream Description</th>
            <th>Date</th>
        </tr>
        <% @dreams.each do |dream| %>
        <tr>
            <td><%= dream.category.name %></td>
            <td><%= link_to dream.description, dream_path(dream) %></td>
            <td><%= format_date(dream.date) %></td>
        </tr>
        <% end %>
    </table>
</div>