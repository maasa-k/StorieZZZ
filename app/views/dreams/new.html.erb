<%= render partial: 'layouts/errors', locals: {object: @dream}%>

<h2>New Dream</h2>

<%= form_for(@dream) do |f| %>
    <%= f.label :date %>
    <%= f.date_field :date %><br>

    <%= f.label :description %>
    <%= f.text_area :description %><br>

    <%= f.label :category %>
    <%= f.collection_select :category_id, Category.all, :id, :name, prompt: "Select One" %>

    <%= f.submit "Submit" %>
<% end %>