<% redirect_if_not_logged_in %>

<h2>Interpretation of Dream</h2>

<%= render partial: 'layouts/errors', locals: {object: @interpretation}%>

<p>The Dream: <%= @dream.description %></p>

<%= form_for([@dream, @interpretation]) do |f| %>
    <%= f.label :description %>
    <%= f.text_area :description %><br>

    <%= f.submit "Submit" %>
<% end %>