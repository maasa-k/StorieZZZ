<% redirect_if_not_logged_in %>

<h3>Interpretations of:</h3>

<div class="dream-desc">
    <%= @dream.description %>
</div>

    <ul>
    <% @interpretations.each do |i| %>
        <li class="interpretations"><%= i.description %>
        <% if i.user_id == current_user.id %>
            <br><%= link_to "Delete", interpretation_path(i), method: :delete, data: {confirm: "Are you sure?"}, class: "button is-danger is-rounded is-small" %>
        </li>
        <% end%>
    <% end %>
    </ul>